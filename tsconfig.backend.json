{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "jsx": "react",
        "allowJs": false,
        "allowUnreachableCode": true,
        "baseUrl": "./",
        "lib": [
            "ES2015", "es6", "dom"
        ],
        "paths": {
            "_": [ "./" ]
        },
        "downlevelIteration": true
    },
    "include": [ "./src/server/**/*.ts" ],
//    "exclude": [ "node_modules" ],
    "filesGlob": [
        "./src/server/*.d.ts"
    ]
}