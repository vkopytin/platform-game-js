{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "paths": {
            "_": [ "./" ]
        },
        "downlevelIteration": true
    },
    "filesGlob": [
        "./src/*.d.ts"
    ],
    "include": ["src"],
    "exclude": ["node_modules", "**/server/*", "**/__tests__/*"]
}